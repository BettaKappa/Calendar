<UserControl x:Class="cld.ActionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cld"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="600">
    <Grid Background="#FF424141">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ui:SymbolIcon Name="ChosenIcon" Symbol="BorderNone20"/>
        <ui:TextBox Name="DrinkBox" Grid.Column="1" Margin="5" IsEnabled="False" Text="Напиток"/>
        <CheckBox Grid.Column="2" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
